        <Button Name="NextMonthButton" Text="NextMonth" KeyBind="N" HorizontalAlign="Right" />
      </Grid>
      <Container Name="MonthCalendarContainer" Height="7" AutoHeoght="false" >
      </Container>
      <Button Name="TodayButton" Text="Today" KeyBind="T" />
    </StackPanel>
  </Grid>
  <StackPanel>
    <HorizontalStackPanel>
      <Label Text="It is " />
      <Label Text="proper" ForegroundColor="Green" />
      <Label Text=" to " />
