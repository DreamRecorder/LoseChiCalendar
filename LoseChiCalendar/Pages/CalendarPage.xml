      </HorizontalStackPanel>
      <Label Text="." />
    </HorizontalStackPanel>
    <HorizontalStackPanel>
      <Label Text="It is " />
      <Label Text="improper" ForegroundColor="Red" />
      <Label Text=" to " />
      <HorizontalStackPanel Name="ImproperThingsTodoContainer" >
      </HorizontalStackPanel>
      <Label Text="." />
    </HorizontalStackPanel>
  </StackPanel>
</StackPanel>