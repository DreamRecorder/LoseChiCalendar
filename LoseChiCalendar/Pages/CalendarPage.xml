      <Button Name="ExitButton" Text="Exit" KeyBind="E" />
    </StackPanel>
    <StackPanel Container.Item="2,0,1,1" HorizontalAlign="Left" >
      <Grid>
        <Button Name="PreviousMonthButton" Text="PrevMonth" KeyBind="P" HorizontalAlign="Left" />
